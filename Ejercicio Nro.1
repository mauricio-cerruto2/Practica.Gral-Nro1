package Ejercicios;

public class Ejercicio1 {
	    private String nombre;
	    private int edad;
	    private String ciudad;

	    public Ejercicio1(String nombre, int edad, String ciudad) {
	        this.nombre = nombre;
	        this.edad = edad;
	        this.ciudad = ciudad;
	    }

	    public void saludar() {
	        System.out.println("Hola, soy " + nombre + " de " + ciudad);
	    }

	    public boolean esMayorDeEdad() {
	        return edad >= 18;
	    }

	    public static void main(String[] args) {
	        
	    	Ejercicio1 persona1 = new Ejercicio1("Juan", 25, "Madrid");
	        Ejercicio1 persona2 = new Ejercicio1("Ana", 17, "Barcelona");
	        Ejercicio1 persona3 = new Ejercicio1("Carlos", 30, "Valencia");

	        
	        persona1.saludar();
	        persona2.saludar();
	        persona3.saludar();

	        
	        System.out.println(persona1.nombre + " es mayor de edad: " + persona1.esMayorDeEdad());
	        System.out.println(persona2.nombre + " es mayor de edad: " + persona2.esMayorDeEdad());
	        System.out.println(persona3.nombre + " es mayor de edad: " + persona3.esMayorDeEdad());
	    }
	

}

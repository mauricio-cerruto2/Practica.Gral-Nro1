package Ejercicios;

public class Ejercicio3Estudiante {
	private String nombre;
    private double nota1;
    private double nota2;

    public Ejercicio3Estudiante (String nombre, double nota1, double nota2) {
        this.nombre = nombre;
        this.nota1 = nota1;
        this.nota2 = nota2;
    }

    public double calcularPromedio() {
        return (nota1 + nota2) / 2;
    }

    public boolean aprobo() {
        return calcularPromedio() >= 6;
    }

    public static void main(String[] args) {
       
    	Ejercicio3Estudiante  estudiante1 = new Ejercicio3Estudiante ("Laura", 7.5, 8.0);
    	Ejercicio3Estudiante  estudiante2 = new Ejercicio3Estudiante ("Pedro", 5.0, 6.5);
    	Ejercicio3Estudiante  estudiante3 = new Ejercicio3Estudiante ("Marta", 4.0, 3.5);

        
        System.out.println(estudiante1.nombre + " - Promedio: " + estudiante1.calcularPromedio() + 
                          " - Aprobó: " + estudiante1.aprobo());
        System.out.println(estudiante2.nombre + " - Promedio: " + estudiante2.calcularPromedio() + 
                          " - Aprobó: " + estudiante2.aprobo());
        System.out.println(estudiante3.nombre + " - Promedio: " + estudiante3.calcularPromedio() + 
                          " - Aprobó: " + estudiante3.aprobo());
    }


}

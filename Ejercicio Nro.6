package Ejercicios;

public class VideojuegoEj6 {
	

	private String nombre;
    private String plataforma;
    private int cantidadJugadores;
    
   
    
   
    public VideojuegoEj6() {
        this.nombre = "Desconocido";
        this.plataforma = "Multiplataforma";
        this.cantidadJugadores = 1;
    }
    
    
    public VideojuegoEj6(String nombre, String plataforma) {
        this.nombre = nombre;
        this.plataforma = plataforma;
        this.cantidadJugadores = 1;
    }
    
  
    public VideojuegoEj6(String nombre, String plataforma, int cantidadJugadores) {
        this.nombre = nombre;
        this.plataforma = plataforma;
        this.cantidadJugadores = cantidadJugadores;
    }
    
  
    
  
    public void mostrar() {
        System.out.println("\nInformación del Videojuego:");
        System.out.println("Nombre: " + nombre);
        System.out.println("Plataforma: " + plataforma);
        System.out.println("Cantidad de Jugadores: " + cantidadJugadores);
    }
    
  
    
  
    public void agregarJugadores() {
        cantidadJugadores++;
        System.out.println("Se agregó 1 jugador. Total: " + cantidadJugadores);
    }
    
   
    public void agregarJugadores(int cantidad) {
        cantidadJugadores += cantidad;
        System.out.println("Se agregaron " + cantidad + " jugadores. Total: " + cantidadJugadores);
    }
    
    public static void main(String[] args) {
       
        VideojuegoEj6 juego1 = new VideojuegoEj6("The Legend of Zelda", "Nintendo Switch", 1);
        VideojuegoEj6 juego2 = new VideojuegoEj6("FIFA 23", "PlayStation 5");
        VideojuegoEj6 juego3 = new VideojuegoEj6(); 
        
       
        juego1.mostrar();
        juego2.mostrar();
        juego3.mostrar();
        
        
        juego1.agregarJugadores(); 
        juego1.agregarJugadores(3);
        
        juego2.agregarJugadores(2);
        juego2.agregarJugadores(); 
        
        
        juego1.mostrar();
        juego2.mostrar();
    }


}
